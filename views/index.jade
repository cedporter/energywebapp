extends layout

block content
  h1= title
    ul
        each result, i in results
            div(style="float: left; width: 500px; padding: 5px")
                p #{i+1}: #{result.deviceName}
                if result.deviceName == "Bedroom Overhead"
                    img(src="/stylesheets/images/overheadLights.jpeg" alt="Bedroom Lights")
                    li  Type of Bulb : #{result.bulbType}
                    li  Bulb Wattage : #{result.bulbWattage}
                    li  Last ON :  #{result.lastOnTime}
                    li  Last OFF : #{result.lastOffTime}
                    li  Daily Duration : #{result.dailyDuration}
                    li  Monthly Duration : #{result.monthlyDuration}
                    li  Current Status : #{result.status}







