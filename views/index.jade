extends layout

block content
  h1= title
    ul
        each result, i in results
            div
                p #{i+1}: #{result.deviceName}
                if result.deviceName == "Bedroom Overhead"
                    img(src="/stylesheets/images/lamp-2.png" alt="Bedroom Lights" width="100" height="140" align="left" style="PADDING-RIGHT: 25px")
                    var dailyduration = #{moment().startOf('day').seconds(result.dailyDuration).format('H:mm:ss')}
                    var monthduration = #{moment().startOf('day').seconds(result.monthlyDuration).format('H:mm:ss')}
                    li  Type of Bulb : #{result.bulbType}
                    li  Bulb Wattage : #{result.bulbWattage}
                    li  Last ON :  #{result.lastOnTime}
                    li  Last OFF : #{result.lastOffTime}
                    li  Daily Duration : #{dailyduration}
                    li  Monthly Duration : #{monthduration}
                    li  Current Status : #{result.status}
                if result.deviceName == "Buffet Lights"
                    img(src="/stylesheets/images/lamp.png" alt="Buffet Lights" width="100" height="140" align="left" style="PADDING-RIGHT: 25px")
                    li  Type of Bulb : #{result.bulbType}
                    li  Bulb Wattage : #{result.bulbWattage}
