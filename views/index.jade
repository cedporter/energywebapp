                    li  Bulb Wattage : #{result.bulbWattage}
                    li  Last ON :  #{result.lastOnTime}
                    li  Last OFF : #{result.lastOffTime}
                    li  Daily Duration : #{moment().startOf('day').seconds(result.dailyDuration).format('H:mm:ss')}
                    li  Monthly Duration : #{moment().startOf('day').seconds(result.monthlyDuration).format('H:mm:ss')}
